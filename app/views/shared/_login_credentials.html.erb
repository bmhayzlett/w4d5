<% action = (@user.persisted? ? session_url : users_url(@user)) %>
<% button = (new_user ? "SIGN UP" : "LOG IN" ) %>

<form action="<%= action %>" method = "post">
  <input
   type="hidden"
   name="authenticity_token"
   value="<%= form_authenticity_token %>">

  <p>Username</p>
  <p><input type="text" name="user[username]" value="<%=@user.username%>"/></p>

  <p>Password</p>
  <p><input type="password" name="user[password]"/></p>

  <button type="submit"><%= button %></button>

</form>
